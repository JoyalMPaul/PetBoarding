@model PetBoarding.ViewModels.BookingsVM

@{
    ViewBag.Title = "Add";
}

<!-- Only for this view -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet">


<h2>Create Booking</h2>

@using (Html.BeginForm("Add", "Bookings", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="mb-3">
        @Html.LabelFor(m => m.PetID, "Pet", new { @class = "form-label" })
        @Html.DropDownListFor(m => m.PetID, Model.AvailablePets, "-- Select Pet --", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.PetID, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.BookInTime, new { @class = "form-label" })
        <input id="BookInTime" name="BookInTime" class="form-control" placeholder="Select Book In Date & Time" />
        @Html.ValidationMessageFor(m => m.BookInTime, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.BookOutTime, new { @class = "form-label" })
        <input id="BookOutTime" name="BookOutTime" class="form-control" placeholder="Select Book Out Date & Time" />
        @Html.ValidationMessageFor(m => m.BookOutTime, "", new { @class = "text-danger" })
    </div>
    <div class="row">
        <div class="offset-md-2 col-md-10">
            <input type="submit" value="Add Booking" class="btn btn-outline-dark" />
            <a href="@Url.Action("Index","Bookings")" class="btn btn-primary">Cancel</a>
        </div>
    </div>
}

<!--For Calendar Views only-->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script>
    flatpickr("#BookInTime", {
        enableTime: true,
        dateFormat: "Y-m-d H:i",
        minDate: "today",
    });

    flatpickr("#BookOutTime", {
        enableTime: true,
        dateFormat: "Y-m-d H:i",
        minDate: "today",
    });
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
